<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        for (let i=1;i<=8;i=i+1){
            if(i>5){
                break
            }
            document.write(i,"<br>")//1 2 3 4
        }

        for (let i=1;i<=8;i=i+2){
            if(i>5){
                continue
            }
            document.write(i+1,"<br>")//2 4 6
        }

        //1<=8, 3<=8, 7<=8
        //i+2; 1+2=3; 3+2=5; 5+2=7
        //i+1, 1+1=2; 3+1=4; 5+1=6

        document.write("Nested loops","<br>")
        for(let i=1;i<=3;i++){
            document.write(i,"<br>")
        for (let j=1;j<=4;j++){
            document.write(j," ")
        }
        document.write("<br>")
        }

        for (let i = 1; i <= 5; i++) {
        for (let j = 1; j <= i; j++) {
            document.write("* ")
        }
        document.write("<br>")
    }

        for (let i = 1; i <= 5; i++) {
        for (let j = 1; j <= i; j++) {
            document.write(j + " ")
        }
        document.write("<br>")
    }
        //pyramid
        for (let i = 1; i <= 5; i++) {
        for (let j = 1; j <= 5 - i; j++) {
          document.write("&nbsp;");
        }
        for (let k = 1; k <= i; k++) {
          document.write("*"," ");
        }
        document.write("<br>");
      }
      document.write("<br>");
for (let i = 1; i <= 6; i++) {
        for (let j = 1; j <= i; j++) {
            document.write("&nbsp;");
        }
        for (let k = 1; k <= 6 - i; k++) {
            document.write("*"," ");
        }
        document.write("<br>");
    }
    </script>
</body>
</html>
